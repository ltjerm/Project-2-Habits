<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<link rel="stylesheet" href="styles.css">


<body>
<header>
    <h1>Todays Habits</h1>
</header>

<div class="time-container">
    <h3>Todays is: </h3>
    <div id="current_date"></div>
</div>

<!-- //display habits  -->
<div class="habitsDiplay container">
    
    <% display.forEach(dis => { %>
    
        <div class="habitDisplay"> </div>
        

        <div class="list-group">
           
          <li class="list-group-item list-group-item-action list-group-item-success done">âŠ™ <%=dis.title%> In the <%=dis.hour%></>
            
          <button class="btn habit-btn " onclick="strike()">Done</button>
          <a class="editButton" href="/<%=dis.id%>">Edit</a>
           </div>

           
          
          

     <% }) %>
    
</div>

<form class="moreHabits" action="/new" method="GET">
    <h3 class="addText">Add Habit </h3>
    <button class="btn add" name="submit"> + </button>
</form>



<form class="deleteHabbit" action="/delete" method="GET">
    <h3 class="deleteText">Delete Habit </h3>
    <button class="btn delete" name="submit"> - </button>
</form>


     


<script src="app.js"></script>
</body>








